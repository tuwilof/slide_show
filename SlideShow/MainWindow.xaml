<Window x:Class="SlideShow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="480" Width="720">
    <Grid x:Name="grid1">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="150"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Image x:Name="bigImage" Grid.Column="1" Grid.Row="1" Width="300" Height="200" VerticalAlignment="Top" Margin="20" />
        <Button x:Name="button1" Grid.Column="0" Grid.Row="0"  Width="120" Height="30" Content="Вставить картинку" Click="button1_Click" VerticalAlignment="Top" Margin="20" />
        <ScrollViewer Grid.Column="0" Grid.Row="1">
            <ListBox x:Name="ListBox" PreviewMouseDown="listBox_PreviewMouseDown" />
        </ScrollViewer>
    </Grid>
</Window>
